def get_tax_bracket(income):
    """
    Determines the tax bracket based on income
    and returns a descriptive string.
    """

    # Validate income
    if income < 0:
        return "Invalid income."

    # Determine tax bracket
    if income < 50000:
        bracket = "Low (10%)"
    elif income < 100000:
        bracket = "Medium (20%)"
    else:
        bracket = "High (30%)"
        
    # Bonus: Ternary expression using modulo
    # If income is an even number, mark as deduction eligible
    deduction_note = " (Deduction Eligible)" if income % 2 == 0 else ""

    return bracket + deduction_note


# Main program
income = float(input("What's your annual income? "))

bracket = get_tax_bracket(income)

# Only calculate estimated tax if income is valid
if bracket != "Invalid income.":
    # Determine tax rate based on bracket
    if "10%" in bracket:
        rate = 0.10
    elif "20%" in bracket:
        rate = 0.20
    else:
        rate = 0.30

    estimated_tax = income * rate
    print(f"Your bracket: {bracket}. Estimated tax: {estimated_tax}")
else:
    print(bracket) 